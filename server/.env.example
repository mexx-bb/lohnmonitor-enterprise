# Lohnmonitor Enterprise - Konfiguration
# Kopiere diese Datei zu .env und passe die Werte an

# Datenbank
DATABASE_URL="file:./data/lohnmonitor.db"

# Server
PORT=5000
NODE_ENV=development

# Session (WICHTIG: In Produktion 채ndern!)
SESSION_SECRET=lohnmonitor-session-secret-2025-BITTE-AENDERN

# SMTP E-Mail (f체r Benachrichtigungen)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM="Lohnmonitor <noreply@company.de>"
SMTP_TO=hr@company.de

# Alarm-Einstellungen
ALARM_DAYS_THRESHOLD=40
ALARM_CHECK_ENABLED=true

# Cron-Job Zeitplan (Standard Cron-Syntax: minute hour day month weekday)
# Default: T채glich um 08:00 Uhr
CRON_SCHEDULE="0 8 * * *"

# Basis Wochenstunden (f체r Zulagen-Berechnung)
BASIS_WOCHENSTUNDEN=40
