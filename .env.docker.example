# Lohnmonitor Enterprise - Docker Environment Variables
# Copy this file to .env and adjust the values

# ============================
# Session Security (REQUIRED - Change this!)
# ============================
SESSION_SECRET=lohnmonitor-docker-secret-change-me-to-random-string

# ============================
# Client Port (Default: 8080)
# ============================
CLIENT_PORT=8080

# ============================
# SMTP E-Mail Configuration (Optional)
# ============================
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM="Lohnmonitor <noreply@company.de>"
SMTP_TO=hr@company.de

# ============================
# Alarm Settings
# ============================
ALARM_DAYS_THRESHOLD=40
ALARM_CHECK_ENABLED=true

# ============================
# Cron Schedule (Default: Daily at 08:00)
# ============================
CRON_SCHEDULE=0 8 * * *

# ============================
# Working Hours Configuration
# ============================
BASIS_WOCHENSTUNDEN=40
